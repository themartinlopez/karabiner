{
    "title": "Right Shift Caps",
    "rules": [
        {
            "description": "Use fn + right_shift for Caps",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_shift",
                        "modifiers": {
                            "mandatory": ["fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "caps_lock"}]
                }
            ]
        }
    ]
}
